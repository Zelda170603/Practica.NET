@model dotnetproyect.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<main class="p-4 mt-14">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Eliminar Producto</h1>

        <h3 class="text-lg text-gray-700 dark:text-gray-300 mt-4">¿Estás seguro de que quieres eliminar este producto?</h3>
        <div class="mt-6">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="text-lg text-gray-900 dark:text-white">@Html.DisplayFor(model => model.Nombre)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="text-lg text-gray-900 dark:text-white">@Html.DisplayFor(model => model.Descripcion)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">@Html.DisplayNameFor(model => model.Existencia)</dt>
                    <dd class="text-lg text-gray-900 dark:text-white">@Html.DisplayFor(model => model.Existencia)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">@Html.DisplayNameFor(model => model.Tipo_prod)</dt>
                    <dd class="text-lg text-gray-900 dark:text-white">@Html.DisplayFor(model => model.Tipo_prod)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">@Html.DisplayNameFor(model => model.Fabricante.nombre)</dt>
                    <dd class="text-lg text-gray-900 dark:text-white">@Html.DisplayFor(model => model.Fabricante.nombre)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600 dark:text-gray-400">@Html.DisplayNameFor(model => model.foto)</dt>
                    <dd class="text-lg text-gray-900 dark:text-white">@Html.DisplayFor(model => model.foto)</dd>
                </div>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-8 flex items-center space-x-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500">
                Eliminar
            </button>
            <a asp-action="Index" class="text-blue-500 hover:underline">Volver a la lista</a>
        </form>
    </div>
</main>
